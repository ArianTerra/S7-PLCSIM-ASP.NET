@{
    ViewData["Title"] = "Home Page";
}

@section Styles
{
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        #bulb {
          width: 50%;
        }
        .filament {
          transition: all 0.2s ease;
        }
        .cls-5 {
          transition: all 1s ease;
        }
        /* #toggle:checked ~ body {
          background: red;
        } */
        .enabled #bulb .filament {
          fill: orange;
        }
        .enabled #bulb .cls-5 {
          fill: #FFF9A3;
        }
        .prong {
          fill: #6d6e71;
        }
        .cls-2 {
          fill: #808285;
        }
        .cls-3 {
          fill: #939598;
        }
        .cls-4 {
          opacity: 0.51;
        }
        .cls-5 {
          fill: #d1d3d4;
        }
    </style>
}

@section Scripts
{
  <script src="lib/jquery/dist/jquery.min.js"></script>
  <script src="js/site.js"></script>
}

